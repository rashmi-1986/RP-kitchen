@model RP_kitchen.Models.UpdateDelicacyViewModel
@{
}
<h1> Edit Delicacy </h1>

<form enctype="multipart/form-data" method="post" action="View" class="mt-4">
    <div class="mb-3">
        <label for="" class="form-label">Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Catagory</label>
        <input type="text" class="form-control" asp-for="Catagory">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name">
    </div>
    <div class="mb-3">
        <label asp-for="Picture" class="control-label"></label>
        <div class="custom-file">
            <input asp-for="Picture" class="custom-file-input" id="IMPicture"
                   onchange="docuent.getElementById('Picture').src = window.URL.createObjectURL(this.files[0])">
            <label class="custom-file-lable" for="IMPicture">Choose file </lable>
        </div>
        <span asp-validation-for="Picture" class="text-danger"></span>
        <img id="Picture" src="" alt="Logo Image"
             width="150" height="150" style="border:1px; margin-top:20px; margin-left:120px;" />
    </div>
    
    <div class="mb-3">
        <label for="" class="form-label">Date</label>
        <input type="date" class="form-control" asp-for="Date">
    </div>

    <div class="mb-3">
        <label for="" class="form-label">Price</label>
        <input type="number" class="form-control" asp-for="Price">
    </div>


    <button type="submit" class="btn btn-primary">Save Changes</button>
    <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Delicacies">Delete</button>
</form>